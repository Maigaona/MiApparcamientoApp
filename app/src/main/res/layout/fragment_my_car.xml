<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/info_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_auto"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/marca_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marca"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/info_auto"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Modelo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/marca_auto"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/longitud_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Longitud del carro:"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/modelo"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/editar_informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitud_carro"
        android:text="Editar informaciÃ³n"
        style="@style/buttonborderless"/>





</androidx.constraintlayout.widget.ConstraintLayout>