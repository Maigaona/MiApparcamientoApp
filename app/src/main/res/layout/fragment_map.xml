<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/busca_aqui"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/busca_aqu"
        android:textColorHint="@color/grey_nord"
        android:gravity="center_vertical"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:paddingStart="40dp"
        android:background="@drawable/rectangle_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_place_24"
        app:layout_constraintStart_toStartOf="@+id/busca_aqui"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue_nord"/>


    <TextView
        android:id="@+id/circle_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/circle"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/busca_aqui"
        app:layout_constraintEnd_toEndOf="@+id/busca_aqui"
        app:layout_constraintTop_toTopOf="@+id/busca_aqui"
        android:text="G"
        android:textSize="18sp" />


</androidx.constraintlayout.widget.ConstraintLayout>