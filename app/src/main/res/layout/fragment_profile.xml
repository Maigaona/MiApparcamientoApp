<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context=".ui.ProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/circle_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        tools:text="G"
        tools:textSize="20sp"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        android:padding="8dp"
        android:background="@drawable/circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/correo_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/circle_profile"
        app:layout_constraintTop_toBottomOf="@+id/nombre_de_usuario"
        tools:text="Correo electronico"  />

    <TextView
        android:id="@+id/nombre_de_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/circle_profile"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre de usuario" />

    <TextView
        android:id="@+id/rectangle_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_corner"
        android:gravity="center|center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo_perfil"
        tools:text="USUARIO PREMIUM"
        android:textColor="@color/gold"
        android:textStyle="bold"
        tools:textSize="15sp" />

    <ImageView
        android:id="@+id/member_icon"
        style="@style/icon_style"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/outline_credit_card_24"
        android:gravity="center|center_vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mi_membresia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mi_membresia" />

    <Button
        android:id="@+id/mi_membresia"
        style="@style/buttonborderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/mi_membresia"
        app:layout_constraintStart_toEndOf="@+id/member_icon"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_corner" />

    <ImageView
        android:id="@+id/car_icon"
        style="@style/icon_style"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/outline_directions_car_24"
        android:gravity="center|center_vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mi_auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mi_auto" />

    <Button
        android:id="@+id/mi_auto"
        style="@style/buttonborderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mi auto"
        app:layout_constraintStart_toEndOf="@+id/car_icon"
        app:layout_constraintTop_toBottomOf="@+id/mi_membresia" />

    <Button
        android:id="@+id/cerrar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiÃ³n"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />







</androidx.constraintlayout.widget.ConstraintLayout>